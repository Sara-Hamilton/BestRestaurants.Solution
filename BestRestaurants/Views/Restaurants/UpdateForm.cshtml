@{
  Layout = "_Layout";
}

</hr>
<h2>Edit Restaurant: @Model["restaurant"].GetName()</h2>
<form class="form-inline" action="/restaurants/@Model["restaurant"].GetId()/update" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="new-name" value="@Model["restaurant"].GetName()">
    </div>

    <div class="form-group">
    <label for="newcuisineId">Cuisine:</label>
      <select class="form-control" name="new-cuisine">
        @foreach(var cuisine in @Model["cuisines"])
        {
          <option value=@cuisine.GetId()>@cuisine.GetName()</option>
        }
      </select>
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      <input type="text" class="form-control" name="new-price" value="@Model["restaurant"].GetPrice()">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
