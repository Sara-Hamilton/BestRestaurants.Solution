@{
  Layout = "_Layout";
}

<h1>Restaurant</h1>
</hr>
<h2>Edit Restaurant: @Model['restaurant'].GetName()</h2>
<form action="/restaurants/@Model["restaurant"].GetId()/update" method="post">
    <label for="name">Name:</label>
    <input type="text" name="new-name" value="@Model["restaurant"].GetName()">

    <label for="newcuisineId">Cuisine:</label>
    <select name="newcuisineId">
      @foreach(var cuisine in @Model["cuisines"])
      {
        <option value=@cuisine.GetId() if()>@cuisine.GetName()</option>
      }
    </select>

    <label for="price">Price:</label>
    <input type="text" name="new-price" value="@Model["restaurant"].GetPrice()">
    <button type="submit">Edit</button>
</form>
<h4><a href="/restaurants">Return home</a></h4>
