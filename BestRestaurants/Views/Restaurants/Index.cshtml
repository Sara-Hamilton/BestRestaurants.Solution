@{
  Layout = "_Layout";
}

@if (Model.Count == 0)
{
  <h3>No restaurants yet</h3>
}
else
{
<div class="list-group">
  @foreach(var restaurant in Model)
  {
    <a href="/restaurants/@restaurant.GetId()/details" class="list-group-item"><h2>@restaurant.GetName()</h2>  Price Range: @restaurant.GetPrice()</a>
  <a href="/restaurants/@restaurant.GetId()/update" class="list-group-item">Edit this restaurant</a>
  <a href="/restaurants/@restaurant.GetId()/delete" class="list-group-item">Delete this restaurant</a>
  <br/>
  }
</div>

<form action="/restaurants/delete" method="post">
  <button type="submit" name="button" class="btn btn-default">Clear All Restaurants</button>
</form>
}
