@{
  Layout = "_Layout";
}

<h2>Edit cuisine: @Model.GetName()</h2>
<form action="/cuisines/@Model.GetId()/update" method="post">
    <label for="new-name">Name:</label>
    <input type="text" name="new-name" value="@Model.GetName()">
    <button type="submit">Edit</button>
</form>
<h4><a href="/cuisines">Return home</a></h4>
