@{
  Layout = "_Layout";
}

@if (Model.Count == 0)
{
  <h3>No restaurants with this cuisine yet</h3>
}
else
{
<h3>All Restaurants with this cuisine</h3>

<div class="list-group">
@foreach(var restaurant in Model)
{
  <a href="/restaurants/@restaurant.GetId()/details" class="list-group-item">@restaurant.GetName()</a>


  <li>Restaurant: @restaurant.GetName() Cuisine: @restaurant.GetCuisineId() Price: @restaurant.GetPrice() | <a href="/restaurants/@restaurant.GetId()/update">Edit</a></li>
  }
</div>
}
